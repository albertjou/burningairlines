<h1>Passengers</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Mobile</th>
    </tr>
  </thead>
  <tbody>
    <% @flight = Flight.find params[:id] %>
    <% User.order(:last_name).each do |user| %>
      <% next unless @flight.id.in?(user.flight_ids) %>
      <tr>
        <td><%= user.title %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.mobile %></td>
      </tr>
    <% end %>
  </tbody>
</table>